#!/usr/bin/env sh
#MISE description="run formatting and lint checks with auto-correction"
#MISE alias=["l:f", "l:fix", "lint:f"]

bin/lint/fix/markdown &&
bin/lint/check/yaml &&
bin/lint/fix/toml &&
bin/lint/check/shell &&
bin/lint/fix/rust

if command -v editorconfig-checker >/dev/null 2>&1; then
  editorconfig-checker
fi
